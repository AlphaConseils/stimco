<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_move_form_inherit" model="ir.ui.view">
    <field name="name">view.move.form.inherit</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form" />
    <field name="arch" type="xml">
      <xpath expr="//div[@name='journal_div']/field[@name='journal_id']" position="attributes">
        <attribute name="default">False</attribute>
        <attribute name="attrs">{'readonly': [('state', '!=', 'draft')], 'invisible': [('move_type', '=', 'entry')], 'required': True}</attribute>
      </xpath>
    </field>
  </record>
</odoo>